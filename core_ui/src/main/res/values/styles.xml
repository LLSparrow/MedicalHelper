<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <!--<item name="android:fontFamily">@font/gt_esti_pro_display_regular</item>-->
        <!--<item name="android:textSize">@dimen/text_size_medium</item>-->
    </style>


    <style name="TextAppearance.HealthAssistant.H1" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorBody</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body.Small" parent="TextAppearance.HealthAssistant.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorBody</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body.Small.Info" parent="TextAppearance.HealthAssistant.Body.Small">
        <item name="android:textColor">@color/colorInfo</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body.Light" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorBody</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body.Info" parent="TextAppearance.HealthAssistant.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorInfo</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Body.Accent" parent="TextAppearance.HealthAssistant.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.HealthAssistant.Button" parent="TextAppearance.HealthAssistant.Body">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.HealthAssistant.Material.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">?buttonInnerPadding</item>
        <item name="android:paddingBottom">?buttonInnerPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">?marginPaddingContentBySide</item>
        <item name="cornerRadius">?buttonCornerRadius</item>
        <item name="android:textAppearance">@style/TextAppearance.HealthAssistant.Button</item>
    </style>

    <style name="Widget.HealthAssistant.Material.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?buttonInnerPadding</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="android:paddingBottom">?buttonInnerPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">?buttonCornerRadius</item>
        <item name="android:layout_margin">?marginPaddingContentBySide</item>
        <item name="android:textAppearance">@style/TextAppearance.HealthAssistant.Button</item>
    </style>

    <style name="Widget.HealthAssistant.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.HealthAssistant.Body</item>
    </style>

    <style name="Widget.HealthAssistant.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAppearance">@style/TextAppearance.HealthAssistant.Body</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">?marginPaddingContentBySide</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>
</resources>