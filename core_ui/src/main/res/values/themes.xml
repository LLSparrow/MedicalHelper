<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BaseTheme.Dark" parent="Theme.MaterialComponents.NoActionBar" />

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="BaseTheme.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App theme. -->
    <style name="AppTheme.Light" parent="BaseTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBody">@color/black</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/Widget.HealthAssistant.TextView</item>
        <item name="android:buttonStyle">@style/Widget.HealthAssistant.TextView</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="listIconSize">@dimen/image_list_size</item>

        <item name="marginPaddingTitle">@dimen/spacing_24</item>
        <item name="marginPaddingContentBySide">@dimen/spacing_24</item>
        <item name="marginPaddingBySide">@dimen/spacing_8</item>

        <item name="buttonCornerRadius">@dimen/button_corner_radius</item>
        <item name="buttonInnerPadding">@dimen/button_inner_padding</item>
    </style>
</resources>